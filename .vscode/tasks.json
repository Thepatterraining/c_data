{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "linkList",
			"command": "/usr/bin/gcc",
			"args": [
                "-g", 
                "${file}", 
                "-o", 
                "${fileBasenameNoExtension}",
                "-fexec-charset=GBK"//解决中文乱码
            ],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/gcc",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared", 
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}